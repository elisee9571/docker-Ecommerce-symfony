{% extends '_layouts/_admin.html.twig' %}

{% block title 'Orders' %}
{% block h1 'Orders' %}

{% block body %}
	<!-- DataTales Example -->
	<div class="card shadow mb-4">
		<div class="card-header py-3">
			<h6 class="m-0 font-weight-bold text-primary">Orders</h6>
		</div>
		<div class="card-body">
			<div class="table-responsive">
				<table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
					<thead>
						<tr>
							<th>Reference</th>
							<th>User</th>
							<th>Total</th>
							<th>Actions</th>
						</tr>
					</thead>
					<tbody>
						{% for order in orders %}
							<tr>
								<td>{{order.reference}}</td>
								<td>{{order.user.email}}</td>
								<td>{{order.total}}â‚¬</td>
                                <td><a href="{{path('admin_order_show', {'id': order.id}) }}" class="btn btn-secondary">Show</a></td>
							</tr>
						{% else %}
							<tr>
								<td colspan="9">no records found</td>
							</tr>
						{% endfor %}
					</tbody>
				</table>
			</div>
		</div>
	</div>
{% endblock %}
