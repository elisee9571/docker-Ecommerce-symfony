<!DOCTYPE html>
<html>
	<head>
		<meta charset="utf-8">
		<title>
			{% block title %}Welcome!
			{% endblock %}
		</title>

		<meta http-equiv="X-UA-Compatible" content="IE=edge">
		<meta
		name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

		<!-- Custom styles for this template-->
		<link
		rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">

		<!-- Custom fonts for this template-->
		{% block stylesheets %}{% endblock %}
		<link href="{{asset("assets/vendor/fontawesome-free/css/all.min.css")}}" defer rel="stylesheet" type="text/css">
		<link
		href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i" rel="stylesheet">
		<!-- Custom styles for this template-->
		<link href="{{asset("assets/css/sb-admin-2.min.css")}}" rel="stylesheet">
		<link
		href="{{asset("assets/vendor/datatables/dataTables.bootstrap4.min.css")}}" rel="stylesheet">


		<!-- Bootstrap core JavaScript-->
		{% block javascripts %}{% endblock %}
		<script src="{{asset("assets/vendor/jquery/jquery.min.js")}}" defer></script>
		<script src="{{asset("assets/vendor/bootstrap/js/bootstrap.bundle.min.js")}}" defer></script>
		<!-- Core plugin JavaScript-->
		<script src="{{asset("assets/vendor/jquery-easing/jquery.easing.min.js")}}" defer></script>
		<!-- Custom scripts for all pages-->
		<script src="{{asset("assets/js/sb-admin-2.min.js")}}" defer></script>
		<!-- Page level plugins -->
		<script src="{{asset('assets/vendor/chart.js/Chart.min.js')}}" defer></script>
		<!-- Page level custom scripts -->
		<script src="{{asset('assets/js/demo/chart-area-demo.js')}}" defer></script>
		<script src="{{asset('assets/js/demo/chart-pie-demo.js')}}" defer></script>

		<!-- Page level plugins -->
		<script src="{{asset('assets/vendor/datatables/jquery.dataTables.min.js')}}" defer></script>
		<script src="{{asset('assets/vendor/datatables/dataTables.bootstrap4.min.js')}}" defer></script>

		<!-- Page level custom scripts -->
		<script src="{{asset('assets/js/demo/datatables-demo.js')}}" defer></script>

	</head>

	<body id="page-top">
		<div id="wrapper">
			{% include "_partials/_admin/_navbar/_sidebar.html.twig" %}

			<div id="content-wrapper" class="d-flex flex-column">

				<div id="content">
					{% include "_partials/_admin/_navbar/_navbar.html.twig" %}
					<div class="container-fluid">
						<div class="d-sm-flex align-items-center justify-content-between mb-4">
							<h1 class="h3 mb-0 text-gray-800"> {% block h1 %}{% endblock %}
								</h1>
								{% set route_name = app.request.attributes.get('_route') %}
								{% if route_name == 'admin_product_index' %}
									<a href="{{path('admin_product_new')}}" class="btn btn-primary">New Product</a>
								{% endif %}

							</div>
							{% block body %}{% endblock %}
						</div>
					</div>

					{% include "_partials/_admin/_footer/_footer.html.twig" %}
				</div>
			</div>
		</body>
	</html>
